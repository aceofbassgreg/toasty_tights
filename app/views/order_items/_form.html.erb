<%= form_for @order_item do |f| %>
  <div class="field">
  	<%= f.select(:product_id, options_for_select(Product.all.collect {|p| ["#{p.color} - #{p.size}", p.id ] })) %>
  </div>
  <div class="field">
  	<%= f.label :quantity %>
  	<%= f.number_field :quantity %>
  </div>
  <div class="actions">
  	<%= f.submit "Add to Cart" %>
  </div>
<% end %>

